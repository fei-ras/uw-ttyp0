if ($#ARGV != 1) {
  die "usage: bdftoequiv bdffile substitutionfile\n"
}

$BDF = shift;
$SUBST = shift;

open(BDF, $BDF) || die "bdftoequiv: cannot open bdffile \"$BDF\"\nbdftoquiv: stopped\n";
open(SUBST, $SUBST) || die "bdftoequiv: cannot open substitutionfile \"$SUBST\"\nbdftoquiv: stopped\n";

%rep = ();

while (<BDF>) {
  if (/^ENCODING\s+(\d+)/) {
    $rep{$1} = 1;
  }
}

while (<SUBST>) {
  s/\#.*//;
  $first = 1;
  while (/\b(?:U\+|0x)?([0-9A-Fa-f]{4})\b/g) {
    if ($first) {
      if (defined $rep{hex($1)}) {
        last;
      } else {
        $c = $1;
        $first = 0;
      }
    } else {
      if (defined $rep{hex($1)}) {
        printf "U+%s U+%s\n", uc($c), uc($1);
        last;
      }
    }
  }
}
